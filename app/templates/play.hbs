<div class="container-fluid text-center">
  <div class="row content">
    <div class="col-sm-2 sidenav">
      <h4>Correct #'s:</h4>
      <div class="well">
        <div class="correct">
          {{#if correctGuess}}
            {{#each correctGuess as |correct|}}
              <p>{{correct}}</p>
            {{/each}}
          {{/if}}
        </div>
      </div>
    </div>
    <div class="col-sm-8 text-left">
      <div class="timer-countdown">
      <div class="time">
        <p>TIME REMAINING:</p>
      </div>
      <div class="countdown">
        {{#each model as |timer|}}
          <p>{{countdown-string startDate=timer.startTime}}</p>
        {{/each}}
      </div>
    </div>
      <div class="imgSection">
        <div class="imgContent">
          {{#each model as |image|}}
            <img class="gifImage " src= {{image.url}}>
          {{/each}}

        </div>
      </div>
      <div class="score-hint-info">
        <div class="score-info">
          <p>My Score: {{score}}</p>
        </div>
      </div>
      <div class="score-hint-info">
        {{#each model as |tag|}}
          <p>Hint: Find {{tag.tagCount}} hashtag(s)!</p>
        {{/each}}
      </div>

      <div class="answerBox">
        <form {{action "sendGuess" on="submit"}}>
        {{input type="text" value=guess class="form-control" placeholder="Type your guess!" autofocus="autofocus"}}

        <div class="submitBtn">
          <button class="btn btn-success" {{action 'sendGuess'}} disabled= {{isDisabled}}>Submit</button>
        </div>
        </form>
    </div>
  </div>
  <div class="col-sm-2 sidenav">
    <h4>Incorrect #'s:</h4>
    <div class="well">
      <div class="incorrect">
        {{#if incorrectGuess}}
          {{#each incorrectGuess as |incorrect|}}
            <p>{{incorrect}}</p>
          {{/each}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
</div>
